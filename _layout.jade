doctype html
html(lang='en')
	head

		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
		title= locals.title ? title + " | " + site_title : site_title
		
		if current.path[0] === "index"
			meta(name='description', content=description)
		else
			if current.path[0] === "work"
				meta(name='description', content=description)
		meta(property='og:title', content=locals.title ? title + " | " + site_title : site_title)

		link(rel='stylesheet', href='/assets/css/pure.min.css')
		link(rel='stylesheet', href='/assets/css/pure.grids.min.css')
		link(rel='stylesheet', href='/assets/css/app.css')

	body(class="#{ current.path.join('-') }")
		!= partial("_partials/nav")
		.container
			if current.path[0] === "index"
				.pure-g.home-thumbs
					.pure-u-1-1.pure-u-sm-2-3.pure-u-md-1-2.bio
						h1 Edward Essing
					for post, slug in public.work._data
						if post.layout !== false
							a(href="/work/#{ slug }").pure-u-1-1.pure-u-sm-1-3.pure-u-md-1-4.home-thumb(style='background-image: url(/work/img/#{ img= post.hero })')
				!= yield
			else
				if current.path[0] === "work"
					!= partial("/work/_work")
				else if current.path[0] === "home"
					!= partial("home")

			footer
				!= partial("_partials/footer")

		script(src="/assets/js/jquery.min.js")
		script(src="/assets/js/script.js")
		
